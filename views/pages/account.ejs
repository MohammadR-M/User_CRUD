<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {pageName: user.name}); %>
<body>
<%- include("../partials/header", {active: 0}) %>
<div class="container">
<div class="card">
    <h5 class="card-header">Info</h5>
    <a type="button" class="btn btn-danger" href="<%= user %>/logout">Logout</a>
    <div class="card-body">
        <h5 class="card-title">User: <%= user %></h5>
        <h5 class="card-title">Email: <%= email %></h5>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#password-update">
            Update User
        </button>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="password-update" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container my-5">
                    <form id="form" method="post">
                        <div class="mb-3">
                            <label for="password-0" class="form-label">Password: </label>
                            <input type="password" class="form-control" name="password-0" id="password-0" value="">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">New Password: </label>
                            <input type="password" class="form-control" name="password" id="password" value="">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%= email %>">
                        </div>
                    </form>
                    </div>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="button" type="button" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>
</div>

</div>
<%- include("../partials/footer") %>
<script src="/js/account.js"></script>
</body>
</html>
